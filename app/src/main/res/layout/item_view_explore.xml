<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    card_view:cardBackgroundColor="#ffdddddd"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="6dp">


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="111dp"
        android:layout_height="31dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="10sp"
        android:textColor="#000000"
        android:textSize="24sp"
        card_view:layout_constraintStart_toEndOf="@+id/ivUser"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:text="王大明" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="356dp"
        android:layout_height="118dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/ivUser">

        <ImageView
            android:id="@+id/ivBlogPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            card_view:srcCompat="@drawable/no_image" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvBlogName"
        android:layout_width="188dp"
        android:layout_height="41dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="225dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:textColor="#000000"
        android:textSize="35sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/cardView"
        tools:text="台北一日遊" />

    <com.example.tripper_android_app.util.CircleImageView
        android:id="@+id/ivUser"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_pic"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:text="-------------------------------------------------------------------------------------------------"
        android:textColor="#330D0808"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/tvBlogName" />


</androidx.constraintlayout.widget.ConstraintLayout>