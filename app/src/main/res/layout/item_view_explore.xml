<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp">


    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="111dp"
        android:layout_height="31dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="10sp"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/ivUser"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat"
        tools:text="王大明" />


    <ImageView
        android:id="@+id/ivBlog"
        android:layout_width="389dp"
        android:layout_height="241dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:background="@color/colorForBottomBar"
        android:scaleType="fitXY"
        android:src="@drawable/no_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle_Blog"
        android:layout_width="385dp"
        android:layout_height="36dp"
        android:layout_marginTop="228dp"
        android:background="#00DEDEDE"
        android:shadowColor="#131313"
        android:shadowDx="1"
        android:shadowDy="0"
        android:shadowRadius="1"
        android:text="台北一日遊"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <com.example.tripper_android_app.util.CircleImageView
        android:id="@+id/ivUser"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_pic"
        app:layout_constraintBottom_toTopOf="@+id/ivBlog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:text="2020-09-10"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBlog" />

    <ImageView
        android:id="@+id/ivThumbs"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivBlog"
        tools:src="@drawable/collection" />

    <TextView
        android:id="@+id/tvThumbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="20個讚"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivThumbs"
        app:layout_constraintTop_toTopOf="@+id/ivThumbs" />


</androidx.constraintlayout.widget.ConstraintLayout>